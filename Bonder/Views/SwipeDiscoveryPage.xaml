<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Bonder.Views.SwipeDiscoveryPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Discover"
             BackgroundColor="{DynamicResource PrimaryBackground}">

    <Grid RowDefinitions="Auto,*,Auto,Auto"
          RowSpacing="0">

        <!-- Header -->
        <Grid Grid.Row="0"
              Padding="20,10"
              ColumnDefinitions="*,Auto,Auto">
            <Label Text="Bonder"
                   FontSize="24"
                   FontFamily="OpenSansSemibold"
                   TextColor="{DynamicResource PrimaryAccent}"
                   VerticalOptions="Center" />

            <Button Grid.Column="1"
                    Text="ðŸ””"
                    FontSize="20"
                    BackgroundColor="Transparent"
                    WidthRequest="40"
                    HeightRequest="40" />

            <Button Grid.Column="2"
                    Text="âš™ï¸"
                    FontSize="20"
                    BackgroundColor="Transparent"
                    WidthRequest="40"
                    HeightRequest="40"
                    Command="{Binding SettingsCommand}" />
        </Grid>

        <!-- Swipe Card Area -->
        <Grid Grid.Row="1"
              Padding="20,0"
              x:Name="CardContainer">

            <!-- Empty State -->
            <VerticalStackLayout IsVisible="{Binding IsEmpty}"
                                 Spacing="20"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center">
                <Label Text="ðŸ“š"
                       FontSize="64"
                       HorizontalOptions="Center" />
                <Label Text="No more books right now"
                       FontSize="20"
                       FontFamily="OpenSansSemibold"
                       TextColor="{DynamicResource TextPrimary}"
                       HorizontalOptions="Center" />
                <Label Text="We're finding more books for you!"
                       FontSize="16"
                       TextColor="{DynamicResource TextSecondary}"
                       HorizontalOptions="Center" />
                <Button Text="Refresh"
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding RefreshCommand}"
                        Margin="0,20,0,0" />
            </VerticalStackLayout>

            <!-- Book Card Stack (renders cards dynamically) -->
            <AbsoluteLayout x:Name="CardStack"
                            IsVisible="{Binding IsEmpty, Converter={StaticResource InverseBoolConverter}}">
                <!-- Cards will be added programmatically -->
            </AbsoluteLayout>

        </Grid>

        <!-- Action Buttons -->
        <HorizontalStackLayout Grid.Row="2"
                               Spacing="20"
                               HorizontalOptions="Center"
                               Margin="0,20,0,10"
                               IsVisible="{Binding IsEmpty, Converter={StaticResource InverseBoolConverter}}">

            <Button Text="âœ–"
                    FontSize="32"
                    TextColor="{DynamicResource Danger}"
                    BackgroundColor="{DynamicResource White}"
                    BorderColor="{DynamicResource Danger}"
                    BorderWidth="2"
                    CornerRadius="35"
                    WidthRequest="70"
                    HeightRequest="70"
                    Command="{Binding DislikeCommand}">
                <Button.Shadow>
                    <Shadow Brush="{DynamicResource Danger}"
                            Opacity="0.2"
                            Radius="10"
                            Offset="0,2" />
                </Button.Shadow>
            </Button>

            <Button Text="ðŸ’™"
                    FontSize="28"
                    BackgroundColor="{DynamicResource White}"
                    BorderColor="{DynamicResource PrimaryAccent}"
                    BorderWidth="2"
                    CornerRadius="30"
                    WidthRequest="60"
                    HeightRequest="60"
                    Command="{Binding SaveForLaterCommand}">
                <Button.Shadow>
                    <Shadow Brush="{DynamicResource PrimaryAccent}"
                            Opacity="0.2"
                            Radius="10"
                            Offset="0,2" />
                </Button.Shadow>
            </Button>

            <Button Text="â¤"
                    FontSize="32"
                    TextColor="{DynamicResource Success}"
                    BackgroundColor="{DynamicResource White}"
                    BorderColor="{DynamicResource Success}"
                    BorderWidth="2"
                    CornerRadius="35"
                    WidthRequest="70"
                    HeightRequest="70"
                    Command="{Binding LikeCommand}">
                <Button.Shadow>
                    <Shadow Brush="{DynamicResource Success}"
                            Opacity="0.2"
                            Radius="10"
                            Offset="0,2" />
                </Button.Shadow>
            </Button>

        </HorizontalStackLayout>

        <!-- Bottom Navigation -->
        <Grid Grid.Row="3"
              ColumnDefinitions="*,*,*,*"
              Padding="10,10,10,20"
              BackgroundColor="{DynamicResource White}">

            <Button Grid.Column="0"
                    Text="ðŸ”"
                    FontSize="24"
                    BackgroundColor="Transparent"
                    TextColor="{DynamicResource PrimaryAccent}"
                    Command="{Binding NavigateToDiscoverCommand}" />

            <Button Grid.Column="1"
                    Text="ðŸ“š"
                    FontSize="24"
                    BackgroundColor="Transparent"
                    TextColor="{DynamicResource TextSecondary}"
                    Command="{Binding NavigateToLibraryCommand}" />

            <Button Grid.Column="2"
                    Text="ðŸ”Ž"
                    FontSize="24"
                    BackgroundColor="Transparent"
                    TextColor="{DynamicResource TextSecondary}"
                    Command="{Binding NavigateToSearchCommand}" />

            <Button Grid.Column="3"
                    Text="ðŸ‘¤"
                    FontSize="24"
                    BackgroundColor="Transparent"
                    TextColor="{DynamicResource TextSecondary}"
                    Command="{Binding NavigateToProfileCommand}" />

        </Grid>

    </Grid>

</ContentPage>