<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Bonder.Views.LibraryPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="My Library"
             BackgroundColor="{DynamicResource PrimaryBackground}">

    <RefreshView IsRefreshing="{Binding IsRefreshing}"
                 Command="{Binding RefreshCommand}"
                 RefreshColor="{DynamicResource PrimaryAccent}">
        <ScrollView>
            <VerticalStackLayout Spacing="24"
                                 Padding="20">

                <Grid ColumnDefinitions="*,*,*"
                      ColumnSpacing="12">
                    <Frame Grid.Column="0"
                           Padding="12"
                           BackgroundColor="{DynamicResource White}"
                           CornerRadius="16">
                        <VerticalStackLayout Spacing="4"
                                             HorizontalOptions="Center">
                            <Label Text="{Binding Statistics.BooksCurrentlyReading}"
                                   FontSize="24"
                                   FontFamily="OpenSansSemibold"
                                   TextColor="{DynamicResource PrimaryAccent}"
                                   HorizontalOptions="Center" />
                            <Label Text="Reading"
                                   FontSize="11"
                                   TextColor="{DynamicResource TextSecondary}"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Column="1"
                           Padding="12"
                           BackgroundColor="{DynamicResource White}"
                           CornerRadius="16">
                        <VerticalStackLayout Spacing="4"
                                             HorizontalOptions="Center">
                            <Label Text="{Binding Statistics.BooksFinished}"
                                   FontSize="24"
                                   FontFamily="OpenSansSemibold"
                                   TextColor="{DynamicResource Success}"
                                   HorizontalOptions="Center" />
                            <Label Text="Finished"
                                   FontSize="11"
                                   TextColor="{DynamicResource TextSecondary}"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Column="2"
                           Padding="12"
                           BackgroundColor="{DynamicResource White}"
                           CornerRadius="16">
                        <VerticalStackLayout Spacing="4"
                                             HorizontalOptions="Center">
                            <Label Text="{Binding Statistics.BooksLiked}"
                                   FontSize="24"
                                   FontFamily="OpenSansSemibold"
                                   TextColor="{DynamicResource PrimaryAccent}"
                                   HorizontalOptions="Center" />
                            <Label Text="Liked"
                                   FontSize="11"
                                   TextColor="{DynamicResource TextSecondary}"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <Frame IsVisible="{Binding HasActiveChallenge}"
                       Padding="20"
                       BackgroundColor="{DynamicResource PrimaryAccent}"
                       CornerRadius="20">
                    <Grid RowDefinitions="Auto,Auto,Auto"
                          RowSpacing="12">
                        <HorizontalStackLayout Grid.Row="0"
                                               Spacing="8">
                            <Label Text="{Binding ActiveChallenge.IconEmoji}"
                                   FontSize="24" />
                            <Label Text="{Binding ActiveChallenge.Name}"
                                   FontSize="18"
                                   FontFamily="OpenSansSemibold"
                                   TextColor="{DynamicResource White}"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <ProgressBar Grid.Row="1"
                                     Progress="{Binding ActiveChallenge.ProgressPercentage}"
                                     ProgressColor="{DynamicResource White}"
                                     BackgroundColor="#FFFFFF33"
                                     HeightRequest="8" />

                        <Label Grid.Row="2"
                               Text="{Binding ChallengeProgressText}"
                               FontSize="14"
                               TextColor="{DynamicResource White}"
                               Opacity="0.9" />
                    </Grid>
                </Frame>

                <VerticalStackLayout Spacing="16">
                    <HorizontalStackLayout Spacing="8"
                                           Padding="0,0,0,8">
                        <Label Text="Currently Reading"
                               FontSize="20"
                               FontFamily="OpenSansSemibold"
                               TextColor="{DynamicResource TextPrimary}"
                               VerticalOptions="Center" />
                        <Label Text="{Binding CurrentlyReading.Count, StringFormat='({0})'}"
                               FontSize="16"
                               TextColor="{DynamicResource TextSecondary}"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <CollectionView ItemsSource="{Binding CurrentlyReading}"
                                    SelectionMode="None"
                                    HeightRequest="280">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal"
                                               ItemSpacing="16" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <VerticalStackLayout Spacing="12"
                                                     WidthRequest="160">
                                    <Frame Padding="0"
                                           CornerRadius="16"
                                           HasShadow="True"
                                           HeightRequest="200"
                                           WidthRequest="160">
                                        <Grid>
                                            <Image Source="{Binding CoverUrl}"
                                                   Aspect="AspectFill">
                                                <Image.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ViewBookCommand}"
                                                                          CommandParameter="{Binding .}" />
                                                </Image.GestureRecognizers>
                                            </Image>

                                            <VerticalStackLayout VerticalOptions="End"
                                                                 Padding="12"
                                                                 Spacing="8">
                                                <ProgressBar Progress="{Binding ReadProgress}"
                                                             ProgressColor="{DynamicResource PrimaryAccent}"
                                                             BackgroundColor="#FFFFFF66"
                                                             HeightRequest="6" />
                                                <Label Text="{Binding ReadProgress, StringFormat='{0:P0}'}"
                                                       FontSize="12"
                                                       TextColor="{DynamicResource White}"
                                                       FontFamily="OpenSansSemibold"
                                                       HorizontalOptions="End"
                                                       BackgroundColor="#00000088"
                                                       Padding="8,4"
                                                       Margin="0,0,0,0">
                                                    <Label.Shadow>
                                                        <Shadow Brush="Black"
                                                                Opacity="0.3"
                                                                Radius="4"
                                                                Offset="0,2" />
                                                    </Label.Shadow>
                                                </Label>
                                            </VerticalStackLayout>
                                        </Grid>
                                    </Frame>

                                    <Label Text="{Binding Title}"
                                           FontSize="13"
                                           FontFamily="OpenSansSemibold"
                                           TextColor="{DynamicResource TextPrimary}"
                                           LineBreakMode="TailTruncation"
                                           MaxLines="2" />

                                    <Button Text="Continue Reading"
                                            FontSize="11"
                                            Padding="8,4"
                                            CornerRadius="8"
                                            BackgroundColor="{DynamicResource PrimaryAccent}"
                                            TextColor="{DynamicResource White}"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ContinueReadingCommand}"
                                            CommandParameter="{Binding .}" />
                                </VerticalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.EmptyView>
                            <VerticalStackLayout Spacing="12"
                                                 HorizontalOptions="Center"
                                                 VerticalOptions="Center"
                                                 Padding="20">
                                <Label Text="ðŸ“–"
                                       FontSize="48"
                                       HorizontalOptions="Center" />
                                <Label Text="No books in progress"
                                       FontSize="16"
                                       TextColor="{DynamicResource TextSecondary}"
                                       HorizontalOptions="Center" />
                                <Button Text="Discover Books"
                                        Style="{StaticResource PrimaryButton}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.NavigateToDiscoverCommand}" />
                            </VerticalStackLayout>
                        </CollectionView.EmptyView>
                    </CollectionView>
                </VerticalStackLayout>

                <!-- Tabs for Liked/Finished -->
                <Grid ColumnDefinitions="*,*"
                      ColumnSpacing="12"
                      Margin="0,8,0,0">
                    <Button Grid.Column="0"
                            Text="â¤ï¸ Liked"
                            BackgroundColor="{Binding SelectedTab, Converter={StaticResource TabColorConverter}, ConverterParameter='Liked'}"
                            TextColor="{DynamicResource White}"
                            CornerRadius="12"
                            Command="{Binding SelectTabCommand}"
                            CommandParameter="Liked" />

                    <Button Grid.Column="1"
                            Text="âœ“ Finished"
                            BackgroundColor="{Binding SelectedTab, Converter={StaticResource TabColorConverter}, ConverterParameter='Finished'}"
                            TextColor="{DynamicResource White}"
                            CornerRadius="12"
                            Command="{Binding SelectTabCommand}"
                            CommandParameter="Finished" />
                </Grid>

                <!-- Books Grid -->
                <CollectionView ItemsSource="{Binding DisplayedBooks}"
                                SelectionMode="None"
                                Margin="0,8,0,0">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical"
                                         Span="3"
                                         HorizontalItemSpacing="12"
                                         VerticalItemSpacing="20" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="8">
                                <Frame Padding="0"
                                       CornerRadius="12"
                                       HasShadow="True"
                                       HeightRequest="160">
                                    <Image Source="{Binding CoverUrl}"
                                           Aspect="AspectFill">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ViewBookCommand}"
                                                                  CommandParameter="{Binding .}" />
                                        </Image.GestureRecognizers>
                                    </Image>
                                </Frame>

                                <Label Text="{Binding Title}"
                                       FontSize="12"
                                       FontFamily="OpenSansSemibold"
                                       TextColor="{DynamicResource TextPrimary}"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="2" />

                                <HorizontalStackLayout Spacing="4"
                                                       IsVisible="{Binding Rating, Converter={StaticResource NotNullConverter}}">
                                    <Label Text="â­"
                                           FontSize="12" />
                                    <Label Text="{Binding Rating, StringFormat='{0:F1}'}"
                                           FontSize="11"
                                           TextColor="{DynamicResource TextSecondary}"
                                           VerticalOptions="Center" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <VerticalStackLayout Spacing="12"
                                             HorizontalOptions="Center"
                                             Padding="20"
                                             Margin="0,40,0,0">
                            <Label Text="ðŸ’™"
                                   FontSize="48"
                                   HorizontalOptions="Center" />
                            <Label Text="No books here yet"
                                   FontSize="16"
                                   TextColor="{DynamicResource TextSecondary}"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>

</ContentPage>